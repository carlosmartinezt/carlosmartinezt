---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

const entries = (await getCollection('entries'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 10);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section class="intro">
        <p>
          This is a public journal where I preserve what I'm learning about growth, relationships,
          and valuesâ€”primarily for my kids, and secondarily for anyone I care about who might need
          it.
        </p>
      </section>

      {
        entries.length > 0 && (
          <section class="entries">
            <h2>Recent entries</h2>
            <ul>
              {entries.map((entry) => (
                <li>
                  <a href={`/${entry.id}/`}>
                    <span class="entry-title">{entry.data.title}</span>
                    <span class="entry-date">
                      <FormattedDate date={entry.data.pubDate} />
                    </span>
                  </a>
                </li>
              ))}
            </ul>
          </section>
        )
      }
    </main>
    <Footer />
  </body>
</html>

<style>
  .intro {
    margin-bottom: 3rem;
  }

  .intro p {
    font-size: 1.15rem;
    color: var(--text-secondary);
    margin: 0;
  }

  .entries h2 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.25rem;
  }

  .entries ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .entries li {
    margin: 0;
    border-bottom: 1px solid var(--border);
  }

  .entries li:last-child {
    border-bottom: none;
  }

  .entries a {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
    padding: 0.875rem 0;
    text-decoration: none;
    color: var(--text);
  }

  .entries a:hover .entry-title {
    color: var(--link);
  }

  .entry-title {
    font-weight: 400;
  }

  .entry-date {
    font-size: 0.875rem;
    color: var(--text-secondary);
    white-space: nowrap;
  }

  .all-entries {
    margin-top: 1.5rem;
  }

  .all-entries a {
    font-size: 0.95rem;
  }

  @media (max-width: 500px) {
    .entries a {
      flex-direction: column;
      gap: 0.25rem;
    }

    .entry-date {
      font-size: 0.8rem;
    }
  }
</style>
