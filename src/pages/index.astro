---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 10);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section class="hero">
        <div class="hero-content">
          <img src="/images/profile.jpg" alt="Carlos Martinez Tuanama" class="profile-photo" />
          <h1>{SITE_TITLE}</h1>
          <p class="subtitle">{SITE_DESCRIPTION}</p>
          <a href="mailto:hello@carlosmartinezt.com" class="cta-button">Chat with me</a>
        </div>
      </section>

      <section class="blog-posts">
        <h2>Recent Posts</h2>
        <div class="posts-grid">
          {
            posts.map((post) => (
              <article class="post-card">
                <h3>
                  <a href={`/blog/${post.id}/`}>{post.data.title}</a>
                </h3>
                <p class="post-date">
                  <FormattedDate date={post.data.pubDate} />
                </p>
                <p class="post-excerpt">{post.data.description}</p>
                <a href={`/blog/${post.id}/`} class="read-more">
                  See more â†’
                </a>
              </article>
            ))
          }
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .hero {
    position: relative;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    background-image: url('/images/hero.jpg');
    background-size: cover;
    background-position: center;
    padding: 4rem 2rem;
    text-align: center;
    color: white;
    margin-bottom: 3rem;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 0;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
  }

  .profile-photo {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid white;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
  }

  .hero h1 {
    font-size: 2.5rem;
    margin: 0.5rem 0;
    font-weight: 700;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .subtitle {
    font-size: 1.25rem;
    margin: 1rem 0 2rem;
    opacity: 0.95;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
  }

  .cta-button {
    display: inline-block;
    padding: 0.75rem 2rem;
    background: white;
    color: #667eea;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    transition:
      transform 0.2s,
      box-shadow 0.2s;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
  }

  .blog-posts {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .blog-posts h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: rgb(var(--black));
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background: white;
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition:
      transform 0.2s,
      box-shadow 0.2s;
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .post-card h3 {
    margin: 0 0 0.5rem;
    font-size: 1.5rem;
  }

  .post-card h3 a {
    color: rgb(var(--black));
    text-decoration: none;
  }

  .post-card h3 a:hover {
    color: #667eea;
  }

  .post-date {
    color: rgb(var(--gray));
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  .post-excerpt {
    color: rgb(var(--gray-dark));
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .read-more {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
  }

  .read-more:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 3rem 1rem;
    }

    .hero h1 {
      font-size: 2rem;
    }

    .profile-photo {
      width: 120px;
      height: 120px;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
