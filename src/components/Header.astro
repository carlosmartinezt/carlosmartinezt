---
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <a href="/" class="site-title">{SITE_TITLE}</a>
    <div class="nav-links">
      <a href="/about">About</a>
    </div>
  </nav>
</header>

<style>
  header {
    border-bottom: 1px solid var(--border);
  }

  nav {
    max-width: 640px;
    margin: 0 auto;
    padding: 1.25rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .site-title {
    font-size: 1.125rem;
    font-weight: 600;
    text-decoration: none;
    color: var(--text);
  }

  .site-title:hover {
    color: var(--link);
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    font-size: 0.95rem;
    color: var(--text-secondary);
    text-decoration: none;
  }

  .nav-links a:hover {
    color: var(--text);
  }

  @media (max-width: 600px) {
    nav {
      padding: 1rem;
    }

    .nav-links {
      gap: 1rem;
    }
  }
</style>
