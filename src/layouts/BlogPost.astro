---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

interface Props extends CollectionEntry<'entries'>['data'] {
  prevEntry?: { id: string; title: string } | null;
  nextEntry?: { id: string; title: string } | null;
}

const { title, description, pubDate, updatedDate, heroImage, prevEntry, nextEntry } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main>
      <article>
        {heroImage && (
          <div class="hero-image">
            <Image src={heroImage} alt="" width={640} />
          </div>
        )}

        <header class="entry-header">
          <p class="entry-date">
            <FormattedDate date={pubDate} />
            {
              updatedDate && (
                <span class="updated">
                  · Updated <FormattedDate date={updatedDate} />
                </span>
              )
            }
          </p>
          <h1>{title}</h1>
        </header>

        <div class="prose">
          <slot />
        </div>

        <footer class="entry-footer">
          <nav class="entry-nav">
            {nextEntry ? (
              <a href={`/${nextEntry.id}/`} class="nav-link nav-prev">
                <span class="nav-label">← Older</span>
                <span class="nav-title">{nextEntry.title}</span>
              </a>
            ) : (
              <span class="nav-placeholder" />
            )}
            {prevEntry ? (
              <a href={`/${prevEntry.id}/`} class="nav-link nav-next">
                <span class="nav-label">Newer →</span>
                <span class="nav-title">{prevEntry.title}</span>
              </a>
            ) : (
              <span class="nav-placeholder" />
            )}
          </nav>
          <div class="back-link">
            <a href="/">← Back to all entries</a>
          </div>
        </footer>
      </article>
    </main>
    <Footer />
  </body>
</html>

<style>
  .hero-image {
    margin-bottom: 2rem;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    border-radius: 4px;
  }

  .entry-header {
    margin-bottom: 2.5rem;
  }

  .entry-date {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }

  .updated {
    font-style: italic;
  }

  .entry-header h1 {
    margin: 0;
    line-height: 1.25;
  }

  .entry-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .entry-nav {
    display: flex;
    justify-content: space-between;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    text-decoration: none;
    max-width: 45%;
  }

  .nav-prev {
    align-items: flex-start;
  }

  .nav-next {
    align-items: flex-end;
    text-align: right;
  }

  .nav-label {
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .nav-title {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--link);
  }

  .nav-link:hover .nav-title {
    text-decoration: underline;
  }

  .nav-placeholder {
    flex: 1;
  }

  .back-link {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .back-link a {
    font-size: 0.95rem;
  }

  @media (max-width: 500px) {
    .entry-nav {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-link {
      max-width: 100%;
    }

    .nav-next {
      align-items: flex-start;
      text-align: left;
    }
  }
</style>
